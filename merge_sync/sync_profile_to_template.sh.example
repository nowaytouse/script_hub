#!/usr/bin/env bash
# =============================================================================
# Surge Profile Rule Sync Script
# Function: Sync complete ruleset to Surge profile
# Updated: 2025-12-07
# 
# Profile Structure:
#   [General] ... [Proxy] ... [Proxy Group] ...
#   [Rule]
#   # ============ Above are new rules ============  <-- User manual rules above this marker
#   # ============ AdBlock Rules ============        <-- Auto-synced rules start here
#   ...
#   [Host] ... [MITM] ... [WireGuard] ...
# =============================================================================

set -e

GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
RED='\033[0;31m'
NC='\033[0m'

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

# ============================================
# CONFIGURATION - EDIT THESE PATHS
# ============================================
SURGE_ICLOUD_DIR="/Users/YOUR_USERNAME/Library/Mobile Documents/iCloud~com~nssurge~inc/Documents"
TEMPLATE_FILE="${PROJECT_ROOT}/ruleset/Sources/surge_rules_complete.conf"
TARGET_FILE="${SURGE_ICLOUD_DIR}/YOUR_PROFILE.conf"

# Marker
USER_RULES_MARKER="# ============ Above are new rules ============"

log_info() { echo -e "${BLUE}[INFO]${NC} $1"; }
log_success() { echo -e "${GREEN}[OK]${NC} $1"; }
log_warning() { echo -e "${YELLOW}[WARN]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }

echo -e "${BLUE}+--------------------------------------------------------------+${NC}"
echo -e "${BLUE}|       Surge Profile Rule Sync Tool                           |${NC}"
echo -e "${BLUE}+--------------------------------------------------------------+${NC}"
echo ""

# ============================================================
# Part 0: First ingest user's new rules (comment keyword classification)
# ============================================================
INGEST_SCRIPT="${SCRIPT_DIR}/ingest_from_surge.sh"
if [ -f "$INGEST_SCRIPT" ]; then
    log_info "Checking for user's new rules (comment keyword classification)..."
    if bash "$INGEST_SCRIPT" --execute --no-backup 2>/dev/null; then
        log_success "User rules ingested and classified"
    else
        log_info "No new rules to ingest"
    fi
    echo ""
fi

# Check files
if [ ! -f "$TEMPLATE_FILE" ]; then
    log_error "Template file not found: $TEMPLATE_FILE"
    exit 1
fi

if [ ! -f "$TARGET_FILE" ]; then
    log_error "Target profile not found: $TARGET_FILE"
    log_info "Please edit TARGET_FILE in this script"
    exit 1
fi

# Backup original file
BACKUP_FILE="${TARGET_FILE}.backup.$(date +%Y%m%d_%H%M%S)"
cat "$TARGET_FILE" > "$BACKUP_FILE"
log_info "Backed up original file"

# Create temp file
TEMP_FILE=$(mktemp)
trap "rm -f $TEMP_FILE" EXIT

# ============================================================
# Part 1: Extract everything before [Rule] (including [General], [Proxy], [Proxy Group], etc.)
# ============================================================
log_info "Extracting profile header (up to [Rule])..."
sed -n '1,/^\[Rule\]/p' "$TARGET_FILE" > "$TEMP_FILE"

# ============================================================
# Part 2: Extract user's manual rules ([Rule] to marker)
# ============================================================
log_info "Extracting user's manual rules..."
RULE_LINE=$(grep -n "^\[Rule\]" "$TARGET_FILE" | head -1 | cut -d: -f1)
MARKER_LINE=$(grep -n "Above are new rules\|above are new" "$TARGET_FILE" | head -1 | cut -d: -f1)

if [ -n "$MARKER_LINE" ] && [ "$MARKER_LINE" -gt "$RULE_LINE" ]; then
    USER_RULES_START=$((RULE_LINE + 1))
    USER_RULES_END=$((MARKER_LINE))
    sed -n "${USER_RULES_START},${USER_RULES_END}p" "$TARGET_FILE" >> "$TEMP_FILE"
    log_info "  User rules lines: $((USER_RULES_END - USER_RULES_START + 1))"
else
    echo "" >> "$TEMP_FILE"
    echo "$USER_RULES_MARKER" >> "$TEMP_FILE"
    log_warning "  User rules marker not found, added"
fi

# ============================================================
# Part 3: Add auto-synced rules (from template file)
# ============================================================
log_info "Adding auto-synced rules..."
echo "" >> "$TEMP_FILE"
grep -v "^\[Rule\]" "$TEMPLATE_FILE" >> "$TEMP_FILE"

# ============================================================
# Part 4: Extract [Host] and everything after
# ============================================================
log_info "Extracting profile footer ([Host] and after)..."
echo "" >> "$TEMP_FILE"
sed -n '/^\[Host\]/,$p' "$TARGET_FILE" >> "$TEMP_FILE"

# ============================================================
# Write final file
# ============================================================
cat "$TEMP_FILE" > "$TARGET_FILE"

# Statistics
RULE_COUNT=$(grep -c "^RULE-SET" "$TARGET_FILE" 2>/dev/null || echo "0")
GEOIP_COUNT=$(grep -c "^GEOIP" "$TARGET_FILE" 2>/dev/null || echo "0")
DOMAIN_COUNT=$(grep -c "^DOMAIN" "$TARGET_FILE" 2>/dev/null || echo "0")

echo ""
echo -e "${BLUE}+--------------------------------------------------------------+${NC}"
echo -e "${BLUE}|                    Sync Complete Statistics                  |${NC}"
echo -e "${BLUE}+--------------------------------------------------------------+${NC}"
printf "${BLUE}|  ${GREEN}RULE-SET rules:${NC}  %-5s                                   ${BLUE}|${NC}\n" "$RULE_COUNT"
printf "${BLUE}|  ${GREEN}GEOIP rules:${NC}     %-5s                                   ${BLUE}|${NC}\n" "$GEOIP_COUNT"
printf "${BLUE}|  ${GREEN}DOMAIN rules:${NC}    %-5s                                   ${BLUE}|${NC}\n" "$DOMAIN_COUNT"
echo -e "${BLUE}+--------------------------------------------------------------+${NC}"

log_success "Profile updated"
echo ""
log_warning "Please reload the profile in Surge to apply changes"
